<resources>
    <string name="app_name">GCMNetworkManager Quickstart</string>

    <string name="start_wifi_task">Start WiFi Task</string>
    <string name="start_charging_task">Start Charging Task</string>
    <string name="turn_on_wifi">Turn on WiFi</string>
    <string name="start_periodic_task">Start Periodic Task</string>
    <string name="stop_periodic_task">Stop Periodic Task</string>

    <string name="description_wifi_task">
        WiFi Task: This task will run as soon as your device is connected to WiFi.
        Clicking the button below will disconnect your WiFi and schedule the task, re-connect your WiFi for the task to run.
    </string>
    <string name="description_charging_task">
        Charging Task: This task will run as soon as your device is connected to power.
        Disconnect your phone from USB Power and click the button below. Then plug your phone back in for the task to run.
    </string>
    <string name="description_periodic_task">
        Periodic Task: This task will run every five seconds.
        Use the buttons below to start and stop the periodic task.
    </string>
</resources>
