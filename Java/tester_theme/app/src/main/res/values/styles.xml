<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme1" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/deepBlue</item>
        <item name="colorAccent">@color/brightYellow</item>
    </style>

    <style name="Theme2" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/theme2_primaryColor</item>
        <item name="colorPrimaryDark">@color/theme2_primaryDarkColor</item>
        <item name="colorAccent">@color/theme2_secondaryColor</item>
        <item name="android:textColor">@color/theme2_primaryTextColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
