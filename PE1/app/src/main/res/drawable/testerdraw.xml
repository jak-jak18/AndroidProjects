<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/outer_shape"  />

    <item>
        <shape android:id="@+id/inner_shape"
            android:shape="rectangle"  >
            <size
                android:height="60dp"
                android:width="60dp"/>
            <solid
                android:color="#ff000000"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</selector>